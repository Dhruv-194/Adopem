<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/petdetailsImg"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/dog5"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/petdetailsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Name"
            android:textColor="@color/lightBlack"
            android:textSize="36dp"
            android:textStyle="bold"
            android:fontFamily="@font/blinker"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/petdetailsAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="age months old"
            android:textColor="@color/lightBlack"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/petdetailsBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="breed"
            android:textColor="@color/lightBlack"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/petdetailsON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="owner name"
            android:textColor="@color/lightBlack"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/petdetailsHometown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hometown"
            android:textColor="@color/lightBlack"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/adoptBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to adopt"
            android:textColor="@color/rightWhite"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/lightBlack"
            app:backgroundTint="@null"
            />
    </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>