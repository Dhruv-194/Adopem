<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:id="@+id/petlistcardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/itemPetImg"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/dog5"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/itemPetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Name"
            android:textColor="@color/lightBlack"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/blinker"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/itemPetAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="age months old"
            android:textColor="@color/lightBlack"
            android:textSize="14sp"
            android:fontFamily="@font/poppins"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petlistcardview"
        android:background="@color/rightWhite"/>
</androidx.constraintlayout.widget.ConstraintLayout>